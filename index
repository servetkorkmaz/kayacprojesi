// Sub-components to keep code clean

const StakeholderCard = ({ icon, title, items, color }) => (
  <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md transition group">
    <div className={`w-12 h-12 ${color} rounded-xl flex items-center justify-center mb-4 text-white shadow-lg group-hover:scale-110 transition duration-300`}>
      {React.cloneElement(icon, { size: 24 })}
    </div>
    <h3 className="text-xl font-bold text-slate-800 mb-4">{title}</h3>
    <ul className="space-y-2">
      {items.map((item, idx) => (
        <li key={idx} className="flex items-start gap-2 text-sm text-slate-600">
          <span className={`w-1.5 h-1.5 rounded-full ${color} mt-1.5`}></span>
          {item}
        </li>
      ))}
    </ul>
  </div>
);

const TimelineItem = ({ year, title, desc, activities, side }) => {
  return (
    <div className={`relative flex flex-col md:flex-row items-center justify-between md:gap-8`}>
      {/* Connector Dot */}
      <div className="absolute left-0 md:left-1/2 w-4 h-4 bg-indigo-600 rounded-full border-4 border-white shadow transform -translate-x-[1.35rem] md:-translate-x-1/2 z-10"></div>
      
      {/* Left Content (Empty if side is right on desktop) */}
      <div className={`w-full md:w-1/2 pl-8 md:pl-0 ${side === 'left' ? 'md:text-right md:pr-12' : 'hidden md:block'}`}>
        {side === 'left' && (
          <TimelineContent year={year} title={title} desc={desc} activities={activities} align="right" />
        )}
      </div>

      {/* Right Content */}
      <div className={`w-full md:w-1/2 pl-8 md:pl-0 ${side === 'right' ? 'md:pl-12' : 'md:hidden'}`}>
        <TimelineContent year={year} title={title} desc={desc} activities={activities} align="left" />
      </div>

      {/* Desktop Right (when side is left, this is empty spacer) */}
      <div className={`hidden md:block md:w-1/2 ${side === 'right' ? 'pl-12' : ''}`}>
        {side === 'right' && (
          <TimelineContent year={year} title={title} desc={desc} activities={activities} align="left" />
        )}
      </div>
    </div>
  );
};

const TimelineContent = ({ year, title, desc, activities, align }) => (
  <div className={`mb-8 md:mb-0 ${align === 'right' ? 'items-end' : 'items-start'}`}>
    <span className="inline-block px-3 py-1 bg-indigo-100 text-indigo-700 font-bold rounded-full text-sm mb-2">
      {year}
    </span>
    <h3 className="text-xl font-bold text-slate-800 mb-2">{title}</h3>
    <p className="text-slate-600 mb-4 italic">{desc}</p>
    <ul className={`space-y-1 ${align === 'right' ? 'md:items-end flex flex-col' : ''}`}>
      {activities.map((act, i) => (
        <li key={i} className="text-sm text-slate-500 flex items-center gap-2">
          {align !== 'right' && <div className="w-1 h-1 bg-slate-400 rounded-full"></div>}
          {act}
          {align === 'right' && <div className="hidden md:block w-1 h-1 bg-slate-400 rounded-full"></div>}
        </li>
      ))}
    </ul>
  </div>
);

const PreviewTab = ({ id, active, onClick, icon, label }) => (
  <button 
    onClick={() => onClick(id)}
    className={`flex items-center gap-2 px-6 py-3 rounded-full text-sm font-semibold transition-all duration-300 ${
      active === id 
      ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-200 transform scale-105' 
      : 'bg-white text-slate-600 border border-slate-200 hover:bg-indigo-50 hover:border-indigo-200'
    }`}
  >
    {icon}
    {label}
  </button>
);

export default App;
